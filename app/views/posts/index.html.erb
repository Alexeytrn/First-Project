<% @posts.each do |post| %>
  <h2>
    <%= link_to post.title, post %>
  </h2>

  <% if @current_user == post.user %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
  <br />
<% end %>

<%= post.content %>

<br />
<b>Posted by</b> <%= link_to post.user.login, post.user %>
<hr />
<% end %>
<br />
