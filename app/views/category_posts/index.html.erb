<table>
  <tr>
    <th>Post</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @category_posts.each do |category_post| %>
  <tr>
    <td><%= category_post.post_id %></td>
    <td><%= category_post.category_id %></td>
    <td><%= link_to 'Show', category_post %></td>
